{
  "name": "Group",
  "base": "PersistedModel",
  "strict": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "UserAndTimeStamp": true
  },
  "properties": {
    "groupNumber": {
      "type": "string",
      "required": true
    },
    "faculty": {
      "type": "string",
      "required": true
    },
    "specialties": {
      "type": "string",
      "required": true
    },
    "numberSemesters": {
      "type": "number",
      "required": true
    },
    "isArchived": {
      "type": "boolean",
      "default": false
    }
  },
  "acls": [
    {
      "permission": "DENY",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "accessType": "*",
      "property": "*"
    },
    {
      "permission": "ALLOW",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "accessType": "READ",
      "property": "*"
    },
    {
      "permission": "ALLOW",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "accessType": "*",
      "property": "*"
    }
  ]
}